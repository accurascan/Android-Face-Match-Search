<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.accurascan.facematch.sample.AddUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp">

            <ImageView
                android:id="@+id/im_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder"
                android:maxHeight="200dp"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:id="@+id/lout_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/upload" />

                <com.accurascan.facematch.customview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accura_upload"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"
                    app:typeface="ALLER_STD_REG" />

            </LinearLayout>
        </FrameLayout>

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_user_name"
            android:layout_marginStart="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_pick_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginTop="50dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:gravity="center"
            android:text="Capture Image"
            android:background="@drawable/btn_bg_border_red"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:background="@drawable/btn_bg_red"
            android:text="@string/add_user"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:visibility="visible"
            android:textStyle="bold"/>
    </LinearLayout>


</ScrollView>